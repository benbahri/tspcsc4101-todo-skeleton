{% extends 'baselayout.html.twig' %}

{% block title %}Todo{% endblock %}

{% block main %}
    <h1>Todo</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ todo.id }}</td>
            </tr>
            <tr>
                <th>Todo</th>
                <td>{{ todo.title }}</td>
            </tr>
            <tr>
                <th>Complete</th>
                <td>{{ todo.completed ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ todo.created ? todo.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ todo.updated ? todo.updated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
            	<th>Project</th>
            	<td>
                {% if todo.project %}
                	<a href="{{ path('project_show', {'id': todo.project.id}) }}">show project</a>
                {% else %}
    	        	-
	            {% endif %}
                </td>
             </tr>
        </tbody>
    </table>

 

    {{ include('todo/_edit_form.html.twig') }}

    {{ include('todo/_delete_form.html.twig') }}
    
    <a href="{{ path('todo_index') }}">back to list</a>
{% endblock %}